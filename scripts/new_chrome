#!/usr/bin/env badash
###########################################################################
# DO NOT EDIT! This script was auto-generated. To update this script, edit
# the file ~/dotfiles/script-gen/new_chrome, and run 'generate-scripts.sh'
###########################################################################
#15dd5b4ebe45557c19b147b98b2bab15

COLOR_FG_RED='\033[0;31m'
COLOR_RESET='\033[0m'
echo_err ()
{
    echo -e "${COLOR_FG_RED}$@${COLOR_RESET}" 1>&2
}
show_help_msg() {
  echo "new_chrome - Opens new Chrome window"
  echo 'Usage: new_chrome [options]'
  echo ''
  echo 'Options:'
  echo '  -h               Show this help message'
}
while getopts ":h" opt
do
  case $opt in
    h)
      show_help_msg && exit 0
      ;;
    \?)
      echo_err "$0: invalid option '-$OPTARG'"
      exit 1
      ;;
    :)
      echo_err "$0: option '-$OPTARG' requires an argument"
      exit 1
      ;;
  esac
done
shift $((OPTIND-1))
@uses_cmds pbpaste osascript
clipboard_contents="$(pbpaste)"
if [[ "$clipboard_contents" =~ ^http ]]
then
  osascript <<END_SCRIPT
tell application "Google Chrome"
  make new window
  set URL of active tab of window 1 to "$clipboard_contents"
  activate
end tell
END_SCRIPT
else
  osascript -e 'tell application "Google Chrome" to make new window activate'
fi
