{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "removeComments": false,
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "target": "es2019"
  },
  "exclude": [
    "lib",
    "node_modules"
  ],
  "include": [
    "."
  ]
}
