# the file ~/dotfiles/script-gen/send-email-from-api, and run 'generate-scripts.sh'
###########################################################################
#fddbff43e5eef2c58c2442edf5c39808

COLOR_FG_RED='\033[0;31m'
COLOR_RESET='\033[0m'
echo_err ()
{
    echo -e "${COLOR_FG_RED}$@${COLOR_RESET}" 1>&2
}
show_help_msg() {
  echo "send-email-from-api - Send email from API email address, using SMTP"
  echo 'Usage: send-email-from-api [options] to_email subject message'
  echo ''
  echo 'Options:'
  echo '  -h               Show this help message'
  echo ''
  echo 'Arguments:'
  echo '  to_email         Address to send the email to'
  echo '  subject          Email subject line'
  echo '  message          Email message contents'
}
while getopts ":h" opt
do
  case $opt in
    h)
      show_help_msg && exit 0
      ;;
    \?)
      echo_err "$0: invalid option '-$OPTARG'"
      exit 1
      ;;
    :)
      echo_err "$0: option '-$OPTARG' requires an argument"
      exit 1
      ;;
  esac
done
shift $((OPTIND-1))
to_email="${1:?Missing argument \'to_email\'}"
subject="${2:?Missing argument \'subject\'}"
message="${3:?Missing argument \'message\'}"
@uses_cmds sendEmail
GET_API_TOKEN="$HOME/Dropbox/secret/get-api-token"
user="$($GET_API_TOKEN email-api-user)"
pass="$($GET_API_TOKEN email-api-pass)"
server="smtp.gmail.com:587"
sendEmail -o tls=yes -f "$user" -t "$to_email" -s "$server" -xu "$user" -xp "$pass" -u "$subject" -m "$message"
