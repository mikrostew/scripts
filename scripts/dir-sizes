#!/usr/bin/env badash
# shellcheck shell=bash

show_help_msg() {
  echo "dir-sizes - Show the sizes of the input dirs, sorted largest to smallest"
  echo 'Usage: dir-sizes [options]'
  echo ''
  echo 'Options:'
  echo '  -h               Show this help message'
}

while getopts ":h" opt
do
  case $opt in
    h)
      show_help_msg && exit 0
      ;;
    \?)
      @echo-err "$0: invalid option '-$OPTARG'"
      exit 1
      ;;
    :)
      @echo-err "$0: option '-$OPTARG' requires an argument"
      exit 1
      ;;
  esac
done
shift $((OPTIND-1))

@uses-cmds du sort

i=1
num_dirs=$#
for dir in "$@"; do
  @wait-for-command --clear --show-output --msg "scanning $dir ($i of $num_dirs)" du -skx "$dir"
  (( i++ ))
done | sort --numeric-sort --reverse
